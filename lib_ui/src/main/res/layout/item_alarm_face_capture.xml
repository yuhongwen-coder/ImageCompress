<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="40px"
    android:background="@color/white_transparent90">
    <ImageView
        android:id="@+id/iv_face"
        android:background="@color/zz_white"
        android:layout_width="300px"
        android:layout_height="300px" />
    <ImageView
        android:id="@+id/iv_capture"
        android:background="@color/zz_white"
        android:layout_marginLeft="40px"
        android:layout_width="300px"
        android:layout_height="300px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="32px"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_face_name"
                android:textColor="@color/text_yellow"
                android:textSize="28px"
                android:text="张三"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_face_sexy"
                android:textColor="@color/text_yellow"
                android:textSize="28px"
                android:text="男"
                android:layout_marginLeft="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_face_age"
                android:textColor="@color/text_yellow"
                android:textSize="28px"
                android:text="24岁"
                android:layout_marginLeft="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_face_level"
                android:textColor="@color/text_yellow"
                android:textSize="28px"
                android:text="C级"
                android:layout_marginLeft="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32px"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/text_yellow"
                android:textSize="28px"
                android:text="@string/text_similar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_face_similar"
                android:textColor="@color/zz_white"
                android:textSize="28px"
                android:text="89%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32px"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/text_yellow"
                android:textSize="28px"
                android:text="@string/text_cert_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_face_cert_no"
                android:textColor="@color/zz_white"
                android:textSize="28px"
                android:text="2012102420"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32px"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/text_yellow"
                android:textSize="28px"
                android:text="@string/text_pass_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_face_pass_time"
                android:textColor="@color/zz_white"
                android:textSize="28px"
                android:text="2018-08-09 12:20:20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
