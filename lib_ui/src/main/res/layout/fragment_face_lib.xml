<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioGroup
        android:id="@+id/rbs"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <RadioButton
            android:id="@+id/rbtn_white_face"
            style="@style/RbStyle"
            android:drawableBottom="@drawable/rb_check2"
            android:text="白名单"/>
        <RadioButton
            android:id="@+id/rbtn_black_face"
            style="@style/RbStyle"
            android:drawableBottom="@drawable/rb_check2"
            android:text="黑名单" />
        <RadioButton
            android:id="@+id/rbtn_staff_face"
            style="@style/RbStyle"
            android:drawableBottom="@drawable/rb_check2"
            android:text="员工" />

    </RadioGroup>


    <TextView
        android:id="@+id/connect_ros"
        style="@style/CommitButton"
        android:layout_width="0dp"
        android:layout_marginBottom="68dp"
        android:text="手动连接Ros"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/rbs"
        app:layout_constraintRight_toRightOf="@+id/rbs" />

    <TextView
        android:id="@+id/tv_clear"
        style="@style/CommitButton"
        android:layout_width="0dp"
        android:text="清除"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/rbs"
        app:layout_constraintRight_toRightOf="@+id/rbs" />

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:background="@color/main_color2"
        app:layout_constraintLeft_toRightOf="@+id/rbs"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>