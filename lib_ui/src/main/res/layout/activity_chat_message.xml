<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".material_design.recylerview.multi_adapter.ChatMessageActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_ll"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/shibie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/fanyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/hecheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="10dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_msg"
        android:background="@drawable/bg_consult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_weight="1">
    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_consult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/ripple_origin_view_fr"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="horizontal">
                <RippleView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cColor="#0000ff"
                    app:cDensity="10"
                    app:cIsAlpha="true"
                    app:cIsFill="true"
                    android:visibility="visible"
                    android:id="@+id/ripple_origin_view"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <RoundedImageView
                        android:id="@+id/iv_origin_language"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_icon"
                        app:riv_oval="true"
                        android:layout_gravity="center">
                    </RoundedImageView>
                    <LanguageIconImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/common_origin_language"
                        android:visibility="gone">
                    </LanguageIconImageView>
                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white_color"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_origin_language"/>
                </LinearLayout>


            </FrameLayout>
            <RelativeLayout
                android:id="@+id/iv_iv_up_arrow_parent"
                android:layout_gravity="center_vertical"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:id="@+id/iv_iv_up_arrow"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/icon_up_arrow"/>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/ripple_targert_view_fr"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:orientation="horizontal">
                <RippleView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cColor="#0000ff"
                    app:cDensity="10"
                    app:cIsAlpha="true"
                    app:cIsFill="true"
                    android:visibility="visible"
                    android:id="@+id/ripple_targert_view"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <RoundedImageView
                        android:id="@+id/iv_target_language"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_icon"
                        app:riv_oval="true"
                        android:layout_gravity="center">
                    </RoundedImageView>
                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white_color"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_target_language"/>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>